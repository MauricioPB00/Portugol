programa {
    inclua biblioteca Matematica --> mat 

/* 
Ler 3 valores e escrever a soma dos 2 maiores.
*/

funcao inicio() {
    
   real num, num2, num3, aux;

   escreva("Digite o primeiro numero: " )
   leia(num)

   escreva("Digite o segundo numero: " )
   leia(num2)

   escreva("Digite o terceiro numero: " )
   leia(num3)

  se(num > num2 && num2 > num3){
    aux = ( num + num2)
    escreva(aux)
  }
  senao se(num2 > num && num > num3){
    aux = ( num2 + num3)
    escreva(aux)
  }
  senao{
     aux = ( num + num3)
    escreva(aux)
  }
}
